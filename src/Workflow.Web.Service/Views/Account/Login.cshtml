@model Workflow.Web.Service.Models.LoginModel
@{

    ViewBag.Title = "Login";
    Layout = null;
    string year = DateTime.Now.Year.ToString();
    string UI_RESOURCE_PATH = ViewBag.UI_RESOURCE_PATH;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="UTF-8">
    <link rel='shortcut icon' href='/favicon.ico' />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="google" content="notranslate" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>@ViewBag.Title - Forms</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/assets/js/bootstrap/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap/js/bootstrap.min.js"></script>
    <style>
        .vertical-center {
            min-height: 90%; /* Fallback for browsers do NOT support vh unit */
            min-height: 90vh; /* These two lines are counted as one :-)       */
            display: flex;
            align-items: center;
        }
        .panel-info>.panel-heading{
			background-color: #ffd777 !important;
		}
		.panel-info{
			border-color: #ffd777 !important;
		}
    </style>
</head>
<body>
    <div class="container" style="width: 890px;">
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 vertical-center">
            <div class="panel panel-info">
                <div class="panel-heading" style="text-align: center;">
                    <img src="~/assets/images/logo.png" alt="Nagaworld" align="middle">
                    <!--<div class="panel-title">Sign In</div>-->

                </div>

                <div style="padding-top:30px" class="panel-body">

                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken();


                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="login-username" type="text" class="form-control" name="username" value="" placeholder="username or email">
                        </div>

                            <div style="margin-bottom: 15px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input id="login-password" type="password" class="form-control" name="password" placeholder="password">
                            </div>

                            <div style="text-align:right;" class="form-group">
                                <div class="col-sm-12 controls" style="padding:0px;">
                                    <div style="float:left; font-size: 90%; position: relative; top:23px;">
                                        @{
                                            if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
                                            {
                                                <p style="color:indianred;">@ViewBag.ErrorMessage</p>
                                            }
                                        }
                                    </div>
                                    <button type="submit" class="btn btn-warning">Sign In</button>
                                    <!--<a id="btn-login" href="#" class="btn btn-success">Login  </a>
                                    <a id="btn-fblogin" href="#" class="btn btn-primary">Login with Window Authintication</a>-->


                                </div>

                            </div>


                                <div class="form-group">
                                    <div class="col-md-12 control" style="padding:0px; margin: 15px 0px;">
                                        <div style="border-top: 1px solid#888; padding-top:10px; font-size:85%">
                                            <span>BUSINESS AUTOMATION FORM - </span><a href="#">  VERSION @ViewBag.Version</a>

                                            <!--<a href="#" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                                                Sign Up Here
                                            </a>-->
                                        </div>
                                    </div>
                                </div>
                                            }
                </div>
            </div>
        </div>
    </div>

</body>
